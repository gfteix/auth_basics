extends base

block vars
    - var title = "Register"

block body 
    h1 Create an Account 
    form(method="POST")
        span First Name: 
        input(type="test", name="firstName", required=true)
        span Last Name: 
        input(type="test", name="lastName", required=true)
        span Email: 
        input(type="test", name="email", required=true)
        span Password: 
        input(type="test", name="password", required=true)
        input(type="submit", value="submit")


